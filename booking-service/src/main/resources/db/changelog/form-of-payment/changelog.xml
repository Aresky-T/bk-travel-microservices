<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.26.xsd"
>
    <changeSet id="Create table form_of_payment" author="Aresky" runAlways="true">
        <preConditions onFail="CONTINUE" onFailMessage="Table form_of_payment already exist!">
            <not>
                <tableExists tableName="form_of_payment" />
            </not>
        </preConditions>
        <createTable tableName="form_of_payment" ifNotExists="true">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>